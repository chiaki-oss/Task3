<h1>Editing Book</h1>

<main>
	<% if @book.errors.any? %>
	<div class="error_explanation">
		<h5><%= pluralize(@book.errors.count, "error") %>prohibited this article from being saved:</h5>
		<ul>
			<% @book.errors.full_messages.each do |message| %>
			<li><%= message %></li>
			<% end %>
		</ul>
	</div>
	<% end %>

	<%= form_for(@book) do |f| %>

	<h4 class="body">Title</h4>
	<p><%= f.text_field :title %></p>

	<h4 class="body">Body</h4>
	<%= f.text_area :body %>

	<p class="link"><%= f.submit 'Update Book' %></p>
	<% end %>

	<p class="link"><%= link_to "Show", @book %> |
	<%= link_to "Back", books_path %></p>

</main>