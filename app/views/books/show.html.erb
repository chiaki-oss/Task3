<!-- 投稿詳細ページ -->
<!-- 投稿完了 -->
<%= flash[:complete] %>
<p id="notice"><%= notice %></p>
<!-- 更新完了 -->
<%= flash[:success] %>
<p id="notice"><%= notice %></p>

<!--　エラーメッセージ  -->
<% if @book.errors.any? %>
<div id="error_explanation">
	<h5><%= pluralize(@book.errors.count, "error") %>prohibited this article from being saved:</h5>
	<ul>
		<% @book.errors.full_messages.each do |message| %>
		<li><%= message %></li>
		<% end %>
	</ul>
</div>
<% end %>

<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<h2>User info</h2>
			<%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg",size: "100x100" %>
			<table class="table">
				<tbody>
					<tr>
						<th>name</th>
						<th><h3 class="profile-name"><%= @user.name %></h3></th>
					</tr>
					<tr>
						<th>introduction</th>
						<th><%= @user.introduction %></th>
					</tr>
				</tbody>
			</table>
			<div class="row">
				<% if @user.id == current_user.id %>
				<p><%= link_to "プロフィール編集", edit_user_path(current_user), class: "pull-right" %></p>
				<% end %>
			</div>

			<div class="row">
				<!-- 新規投稿 -->
				<h2>New book</h2>
				<%= form_for(@book) do |f| %>
	
				<div class="field row">
					<%= f.label :title %>
					<%= f.text_field :title %>
				</div>
				<div class="field row">
					<%= f.label :opinion %>
					<%= f.text_area :body %>
				</div>
				<div class="actions row">
					<%= f.submit 'Create Book' %>
				<% end %>
				</div>
			</div>
		</div>
		<div class="col-xs-9">
			<h2>Book detail</h2>
			<table class="table table-hover table-inverse">
				<tbody>
					<tr>
						<!-- profile-img / Users詳細 -->
						<th><%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg",size: "100x100" %><br>
							<%= link_to @user.name, user_path(@book.user) %>
						</th>
						<th><%= @book.title %></th>
						<th><%= @book.body %></th>
						<% if @user.id == current_user.id %>
						<th><%= link_to "Edit", edit_book_path(@book) %></th>
						<th class="button"><%= link_to "Destroy", book_path(@book), method: :delete %></th>
						<% end %>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
</div>
