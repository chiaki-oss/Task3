<!-- 投稿詳細ページ -->
<!-- 投稿完了 -->
<%= flash[:complete] %>
<p class="notice"><%= notice %></p>
<!-- 更新完了 -->
<%= flash[:success] %>
<p class="notice"><%= notice %></p>

<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<h2>User info</h2>
			<table class="table">
				<tbody>
					<tr>
						<th>name</th>
						<th></th>
					</tr>
					<tr>
						<th>introduction</th>
						<th></th>
					</tr>
				</tbody>
			</table>
			<div class="row">
				<a href="#"></a>
				<!-- 新規投稿 -->
				<h4>New book</h4>
				<%= form_for(@book) do |f| %>
				<!--　エラーメッセージ  -->
				<% if @book.errors.any? %>
				<div id="error_explanation">
					<h5><%= pluralize(@book.errors.count, "error") %>prohibited this article from being saved:</h5>
					<ul>
						<% @book.errors.full_messages.each do |message| %>
						<li><%= message %></li>
						<% end %>
					</ul>
				</div>
				<% end %>
				<div class="field row">
					<%= f.label :title %>
					<%= f.text_field :title %>
				</div>
				<div class="field row">
					<%= f.label :opinion %>
					<%= f.text_area :body %>
				</div>
				<div class="actions row">
					<%= f.submit 'Create Book' %>
					<% end %>
				</div>
			</div>
		</div>
		<div class="col-xs-9">
			<h2>Book Detail</h2>
			<table class="table table-hover table-inverse">
				<tbody>
					<tr>
						<th>name</th>
						<th><%= @book.title %></th>
						<th><%= @book.body %></th>
						<th><%= link_to "Edit", edit_book_path(@book) %></th>
						<th class="button"><%= link_to "Destroy", book_path(@book), method: :delete %></th>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
</div>
