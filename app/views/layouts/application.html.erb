<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <h1>Bookers</h1>
    </header>
    <nav>
      <ul class="nav-list">
        <% if user_signed_in? %>
        <li class="list-item">
          <%= link_to "Home","user_path(current_user.id" %>
        </li>
        <li class="list-item">
          <%= link_to "Users","#" %>
        </li>
        <li class="list-item">
          <%= link_to "Books","#" %>
        </li>
        <li class="list-item">
          <%= link_to "logout",destroy_user_session_path, method: :delete %>
        </li>
        <% else %>
        <li class="list-item">
          <%= link_to "Home","user_path(current_user.id" %>
        </li>
        <li class="list-item">
          <%= link_to "About","#" %>
        </li>
        <li class="list-item">
          <%= link_to "sign up", new_user_registration_path %>
        </li>
        <li class="list-item">
          <%= link_to "login", new_user_session_path %>
        </li>
        <% end %>
      </ul>
    </nav>

    <main>
      <%= yield %>
    </main>


  </body>
</html>
