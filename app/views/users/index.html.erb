<!-- Users画面 -->
<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<h2>User info</h2>
			<%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg", class: "img-circle pull-left profile-thumb" %>
			<table class="table">
				<tbody>
					<tr>
						<th>name</th>
						<th><h3 class="profile-name"><%= @user.name %></h3></th>
					</tr>
					<tr>
						<th>introduction</th>
						<th><%= @user.introduction %></th>
					</tr>
				</tbody>
			</table>

			<div class="row">
				<% if @user.id == current_user.id %>
				<p><%= link_to "プロフィール編集", edit_user_path(@user), class: "pull-right" %></p>
				<% end %>
			</div>
			
			<div class="row">
				<a href="#"></a>
				<!-- 新規投稿 -->
				<h4>New book</h4>
				
				
				 <!--　エラーメッセージ  -->

			</div>
		</div>
		<div class="col-xs-9">
			<h2>Users</h2>
			<table class="table table-hover table-inverse">
				<thead>
					<tr>
						<th>image</th>
						<th>name</th>
					</tr>
				</thead>

				<tbody>
					<% @users.each do |user| %>
					<tr>
						<td><%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg", class: "img-circle pull-left profile-thumb" %></td>
						<td><%= user.name %></td>
						<td><%= link_to "Show", user %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>