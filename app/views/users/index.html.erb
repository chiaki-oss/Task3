<!-- Users画面 -->
<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<h2>User info</h2>
			<%= attachment_image_tag current_user, :profile_image, format: 'jpeg', fallback: "no_image.jpg",size: "100x100" %>
			<table class="table">
				<tbody>
					<tr>
						<th>name</th>
						<th><h3 class="profile-name"><%= current_user.name %></h3></th>
					</tr>
					<tr>
						<th>introduction</th>
						<th><%= current_user.introduction %></th>
					</tr>
				</tbody>
			</table>
			<div class="row">
				<% if @user.id == current_user.id %>
				<p><%= link_to "プロフィール編集", edit_user_path(current_user), class: "pull-right" %></p>
				<% end %>
			</div>
			
			<div class="row">
				<a href="#"></a>
				<!-- 新規投稿 -->
				<h2>New book</h2>
				<%= form_for(@book) do |f| %>
				<!--　エラーメッセージ  -->
				<% if @book.errors.any? %>
				<div id="error_explanation">
					<h5><%= pluralize(@book.errors.count, "error") %>prohibited this article from being saved:</h5>
					<ul>
						<% @book.errors.full_messages.each do |message| %>
						<li><%= message %></li>
						<% end %>
					</ul>
				</div>
				<% end %>

				<div class="field row">
					<%= f.label :title %>
					<%= f.text_field :title %>
				</div>
				<div class="field row">
					<%= f.label :opinion %>
					<%= f.text_area :body %>
				</div>
				<div class="actions row">
					<%= f.submit 'Create Book' %>
					<% end %>
				</div>
			</div>
		</div>
		<!-- USERS -->
		<div class="col-xs-9">
			<h2>Users</h2>
			<table class="table table-hover table-inverse">
				<thead>
					<tr>
						<th>image</th>
						<th>name</th>
					</tr>
				</thead>

				<tbody>
					<% @users.each do |user| %>
					<tr>
						<td><%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg", class: "img-circle pull-left profile-thumb" %></td>
						<td><%= user.name %></td>
						<td><%= link_to "Show", user %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>