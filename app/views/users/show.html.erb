<!-- Home画面 -->
<!-- 更新完了 -->
<%= flash[:success] %>
<p class="notice"><%= notice %></p>


<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<h2>User info</h2>
			<%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg",size: "100x100" %>
			<table class="table">
				<tbody>
					<tr>
						<th>name</th>
						<th><h3 class="profile-name"><%= @user.name %></h3></th>
					</tr>
					<tr>
						<th>introduction</th>
						<th><%= @user.introduction %></th>
					</tr>
				</tbody>
			</table>
			<div class="row">
				<% if @user.id == current_user.id %>
				<p><%= link_to "プロフィール編集", edit_user_path(@user), class: "pull-right" %></p>
				<% end %>
			</div>
			
			<!-- 新規投稿 -->
			<div class="row">
				<h2>New book</h2>
				<%= form_for(@book) do |f| %>
				<!--　エラーメッセージ  -->
				<% if @book.errors.any? %>
				<div id="error_explanation">
					<h5><%= pluralize(@book.errors.count, "error") %>prohibited this article from being saved:</h5>
					<ul>
						<% @book.errors.full_messages.each do |message| %>
						<li><%= message %></li>
						<% end %>
					</ul>
				</div>
				<% end %>

				<div class="field row">
					<%= f.label :title %>
					<%= f.text_field :title %>
				</div>
				<div class="field row">
					<%= f.label :opinion %>
					<%= f.text_area :body %>
				</div>
				<div class="actions row">
					<%= f.submit 'Create Book' %>
					<% end %>
				</div>
			</div>
		</div>

		<!-- BOOKS -->
		<div class="col-xs-9">
			<h2>Books</h2>
			<table class="table table-hover table-inverse">
				<thead>
					<tr>
						<th>Title</th>
						<th>Opinion</th>
					</tr>
				</thead>
				<tbody>
					<% @books.each do |book| %>
					<tr>
						<td class="title">
							<a href = book_path(book) ><%= book.title %></a>
						</td>
						<td class="body"><%= book.body %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>




